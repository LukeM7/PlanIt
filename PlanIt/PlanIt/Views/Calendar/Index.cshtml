@{
    ViewData["Title"] = "Calendar";
    Layout = "_Layout";
}

<div class="calendar-index-body">
    <!-- Day and time interface -->
    <div class="calendar-headline">
        <div class="datetime" id="datetime"></div>
    </div>

    <script src="~/js/datetime.js"></script>

    <div class="dwm-container">
        <table class="dwm-table" width="100%">
            <tr>
                <td>
                    <input type="radio" class="view-selector" name="view-selector" id="day-view" />
                    <label for="day-view">Day</label>
                </td>
                <td>
                    <input type="radio" class="view-selector" name="view-selector" id="week-view" />
                    <label for="week-view">Week</label>
                </td>
                <td>
                    <input type="radio" class="view-selector" name="view-selector" id="month-view" />
                    <label for="month-view">Month</label>
                </td>
            </tr>
        </table>
    </div>
</div>
